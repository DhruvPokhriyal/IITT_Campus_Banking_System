<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20" styleClass="dialog-container">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Make a Withdrawal" styleClass="dialog-title"/>

    <VBox spacing="10" styleClass="form-container">
        <Label text="Amount:" styleClass="form-label"/>
        <TextField fx:id="amountField" promptText="Enter amount to withdraw" styleClass="form-field"/>
    </VBox>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Cancel" onAction="#handleCancel" styleClass="secondary-button"/>
        <Button text="Withdraw" onAction="#handleWithdraw" styleClass="primary-button"/>
    </HBox>
</VBox> 