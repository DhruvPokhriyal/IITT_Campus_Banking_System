<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20" styleClass="dialog-container">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Pay Bills" styleClass="dialog-title"/>

    <VBox spacing="10" styleClass="form-container">
        <Label text="Bill Type:" styleClass="form-label"/>
        <ComboBox fx:id="billTypeComboBox" styleClass="form-field">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Electricity"/>
                    <String fx:value="Water"/>
                    <String fx:value="Internet"/>
                    <String fx:value="Phone"/>
                    <String fx:value="Other"/>
                </FXCollections>
            </items>
        </ComboBox>

        <Label text="Bill Number:" styleClass="form-label"/>
        <TextField fx:id="billNumberField" promptText="Enter bill number" styleClass="form-field"/>

        <Label text="Amount:" styleClass="form-label"/>
        <TextField fx:id="amountField" promptText="Enter bill amount" styleClass="form-field"/>

        <Label text="Due Date:" styleClass="form-label"/>
        <DatePicker fx:id="dueDatePicker" styleClass="form-field"/>
    </VBox>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Cancel" onAction="#handleCancel" styleClass="secondary-button"/>
        <Button text="Pay Bill" onAction="#handlePayBill" styleClass="primary-button"/>
    </HBox>
</VBox> 