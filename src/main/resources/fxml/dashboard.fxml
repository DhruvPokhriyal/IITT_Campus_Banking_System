<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.chart.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.iit.banking.ui.controller.DashboardController"
            styleClass="dashboard-container">

    <!-- Top Navigation Bar -->
    <top>
        <HBox styleClass="nav-bar" spacing="20" alignment="CENTER_LEFT">
            <padding>
                <Insets top="10" right="20" bottom="10" left="20"/>
            </padding>
            
            <ImageView fitWidth="40" fitHeight="40" preserveRatio="true">
                <Image url="@/images/logo.png"/>
            </ImageView>
            
            <Label text="IIT Campus Banking System" styleClass="nav-title"/>
            
            <Region HBox.hgrow="ALWAYS"/>
            
            <Button text="Profile" styleClass="nav-button" onAction="#handleProfile"/>
            <Button text="Settings" styleClass="nav-button" onAction="#handleSettings"/>
            <Button text="Logout" styleClass="nav-button" onAction="#handleLogout"/>
        </HBox>
    </top>

    <!-- Left Sidebar -->
    <left>
        <VBox styleClass="sidebar" spacing="10" prefWidth="250">
            <padding>
                <Insets top="20" right="10" bottom="20" left="10"/>
            </padding>

            <Button text="Dashboard" styleClass="sidebar-button" onAction="#handleDashboard"/>
            <Button text="Accounts" styleClass="sidebar-button" onAction="#handleAccounts"/>
            <Button text="Transactions" styleClass="sidebar-button" onAction="#handleTransactions"/>
            <Button text="Transfers" styleClass="sidebar-button" onAction="#handleTransfers"/>
            <Button text="Statements" styleClass="sidebar-button" onAction="#handleStatements"/>
            <Button text="Reports" styleClass="sidebar-button" onAction="#handleReports"/>
            
            <Region VBox.vgrow="ALWAYS"/>
            
            <Button text="Help & Support" styleClass="sidebar-button" onAction="#handleHelp"/>
            <Button text="About" styleClass="sidebar-button" onAction="#handleAbout"/>
        </VBox>
    </left>

    <!-- Main Content Area -->
    <center>
        <VBox spacing="20" styleClass="main-content">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <!-- Welcome Section -->
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label fx:id="welcomeLabel" text="Welcome, User!" styleClass="welcome-text"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="Refresh" styleClass="refresh-button" onAction="#handleRefresh"/>
            </HBox>

            <!-- Quick Actions -->
            <HBox spacing="20" styleClass="quick-actions">
                <Button text="Deposit" styleClass="action-button" onAction="#handleDeposit"/>
                <Button text="Withdraw" styleClass="action-button" onAction="#handleWithdraw"/>
                <Button text="Transfer" styleClass="action-button" onAction="#handleTransfer"/>
                <Button text="Pay Bills" styleClass="action-button" onAction="#handlePayBills"/>
            </HBox>

            <!-- Account Summary -->
            <VBox styleClass="summary-container">
                <Label text="Account Summary" styleClass="section-title"/>
                <HBox spacing="20">
                    <VBox styleClass="summary-card">
                        <Label text="Available Balance" styleClass="card-label"/>
                        <Label fx:id="balanceLabel" text="$0.00" styleClass="card-value"/>
                    </VBox>
                    <VBox styleClass="summary-card">
                        <Label text="Last Transaction" styleClass="card-label"/>
                        <Label fx:id="lastTransactionLabel" text="No recent transactions" styleClass="card-value"/>
                    </VBox>
                    <VBox styleClass="summary-card">
                        <Label text="Account Status" styleClass="card-label"/>
                        <Label fx:id="statusLabel" text="Active" styleClass="card-value"/>
                    </VBox>
                </HBox>
            </VBox>

            <!-- Recent Transactions -->
            <VBox styleClass="transactions-container">
                <Label text="Recent Transactions" styleClass="section-title"/>
                <TableView fx:id="transactionsTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn text="Date" fx:id="dateColumn"/>
                        <TableColumn text="Description" fx:id="descriptionColumn"/>
                        <TableColumn text="Amount" fx:id="amountColumn"/>
                        <TableColumn text="Status" fx:id="statusColumn"/>
                    </columns>
                </TableView>
            </VBox>
        </VBox>
    </center>

    <!-- Status Bar -->
    <bottom>
        <HBox styleClass="status-bar" spacing="10" alignment="CENTER_LEFT">
            <padding>
                <Insets top="5" right="10" bottom="5" left="10"/>
            </padding>
            
            <Label fx:id="statusLabel" text="System Status: Online" styleClass="status-text"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label fx:id="timeLabel" styleClass="status-text"/>
        </HBox>
    </bottom>

</BorderPane> 