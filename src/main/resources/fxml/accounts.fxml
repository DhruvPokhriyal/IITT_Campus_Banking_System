<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.iit.banking.ui.controller.AccountsController"
      spacing="10" padding="20">

    <!-- Top Bar -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Accounts" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Refresh" onAction="#handleRefresh"/>
        <Button text="Back to Dashboard" onAction="#handleBackToDashboard"/>
    </HBox>

    <!-- Main Content -->
    <VBox spacing="10" VBox.vgrow="ALWAYS">
        <TableView fx:id="accountsTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="accountNumberColumn" text="Account Number" prefWidth="200"/>
                <TableColumn fx:id="balanceColumn" text="Balance" prefWidth="150"/>
            </columns>
        </TableView>

        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Button text="Export" onAction="#handleExport"/>
            <Button text="Print" onAction="#handlePrint"/>
        </HBox>
    </VBox>

    <!-- Status Bar -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label fx:id="statusLabel" text="Ready"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Label fx:id="timeLabel"/>
    </HBox>

</VBox> 